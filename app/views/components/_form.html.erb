<%= render 'shared/error_messages', object: @component %>

<div class='row'>
  <div class='col-md-6'>
    <%= form_for(@component) do |f| %>
      <div class='panel panel-default'>
        <div class="panel-heading">
          <h3 class="panel-title">Cadastro</h3>
        </div>
        <div class='panel-body'>
            <div class="form-group">
              <%= f.label :group%><br>
              <%= f.collection_select :group_id, Group.all, :id, :name, { prompt: true }, { class: 'form-control' } %>
            </div>
            <div class="form-group">
              <%= f.label :name%><br>
              <%= f.text_field :name, class: "form-control", placeholder: "", maxlength: 255 %>
            </div>
            <div class="form-group">
              <%= f.label :situation%><br>
              <%= f.collection_select :situation_id, Situation.all, :id, :name, { prompt: true } , { class: 'form-control' } %>
            </div>
            <div class="form-group">
              <%= f.label :url%><br>
              <%= f.text_field :url, class: "form-control", placeholder: "", maxlength: 255 %>
            </div>
            <div class="form-group">
              <%= f.label :description%><br>
              <%= f.text_area :description, class: 'form-control', cols: 20, rows: 3 %>
            </div>
          </div>
        <div class='panel-footer'>
          <%= f.submit 'Salvar', data: { disable_with: "Aguarde..." }, class: 'btn btn-primary margin-right-sm' %>
          <%= link_to components_path, class: 'btn btn-default' do %>
            Voltar
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
