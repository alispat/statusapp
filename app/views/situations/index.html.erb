<div class="page-header">
  <h2>Situações</h2>
</div>

<% unless @situations.empty? -%>
<div class='row'>
  <div class='col-md-6'>
    <div class='panel panel-default'>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Nome</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%= content_tag_for(:tr, @situations) do |situation| %>
              <tr class='situation' id='situation_<%=situation.id%>'>
                <td style='color: <%=situation.color%>'><i class='<%= situation.icon %> margin-right-sm'></i> <%= situation.name %></td>
                <td class='text-right'>
                  <% if policy(:situation).edit? %>
                    <%= link_to 'Editar', edit_situation_path(situation), class: 'margin-left-sm' %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class='panel-footer'>
        <div class='row'>
          <div class='col-md-6 text-left'>
            <%= page_entries_info @situations %>
          </div>
          <div class='col-md-6 text-right'>
            <%= paginate @situations %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% else -%>
  <div class='row'>
    <div class='col-md-12'>
      <div class='panel panel-default'>
        <div class='panel-body'>
          <p class="lead text-center text-muted margin-top-xl margin-bottom-xl">Nenhum item encontrado.</p>
        </div>
      </div>
    </div>
  </div>
<% end -%>
