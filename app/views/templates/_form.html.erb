<%= render 'shared/error_messages', object: @template %>

<div class='row'>
  <div class='col-md-6'>
    <%= form_for(@template) do |f| %>
      <div class='panel panel-default'>
        <div class="panel-heading">
          <h3 class="panel-title">Cadastro</h3>
        </div>
        <div class='panel-body'>
          <div class="form-group">
            <%= f.label :name%><br>
            <%= f.text_field :name, class: "form-control", placeholder: "", maxlength: 255 %>
          </div>
          <div class="form-group">
            <%= f.label :message%><br>
            <%= f.text_area :message, class: 'form-control', cols: 20, rows: 10 %>
          </div>
        </div>
        <div class='panel-footer'>
          <%= f.submit 'Salvar', data: { disable_with: "Aguarde..." }, class: 'btn btn-primary margin-right-sm' %>
          <%= link_to templates_path, class: 'btn btn-default' do %>
            Voltar
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
