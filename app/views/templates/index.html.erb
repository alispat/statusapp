<div class="page-header">
  <h2>Templates <%= link_to new_template_path, class: 'btn btn-primary' do %>Novo<% end %></h2>
</div>

<% unless @templates.empty? -%>
<div class='row'>
  <div class='col-md-6'>
    <div class='panel panel-default'>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Nome</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%= content_tag_for(:tr, @templates) do |template| %>
              <td><%= template.name %></td>
              <td class='text-right'>
                <%= link_to 'Editar', edit_template_path(template), class: 'margin-left-sm' %>
                <%= link_to 'Remover', template, method: :delete, data: { confirm: 'Você confirma esta ação?' }, class: 'margin-left-sm' %>
              </td>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class='panel-footer'>
        <div class='row'>
          <div class='col-md-6 text-left'>
            <%= page_entries_info @templates %>
          </div>
          <div class='col-md-6 text-right'>
            <%= paginate @templates %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% else -%>
  <div class='row'>
    <div class='col-md-12'>
      <div class='panel panel-default'>
        <div class='panel-body'>
          <p class="lead text-center text-muted margin-top-xl margin-bottom-xl">Nenhum item encontrado.</p>
        </div>
      </div>
    </div>
  </div>
<% end -%>
