<div class="page-header">
  <h2><%%=@<%= singular_table_name %>.name%></h2>
</div>

<div class='row'>
  <div class='col-md-6'>
    <div class='panel panel-default'>
      <div class="panel-heading">
        <h3 class="panel-title">Cadastro</h3>
      </div>
      <table class='table'>
        <% attributes.each do |attribute| -%>
        <%- if attribute.reference? -%>
        <tr>
          <th class='text-right'><%= attribute.column_name %></th>
          <td><%%= @<%= singular_table_name %>.<%= attribute.column_name %>.name %></td>
        </tr>
        <%- else -%>
        <tr>
          <th class='text-right'><%= attribute.human_name %></th>
          <td><%%= @<%= singular_table_name %>.<%= attribute.name %> %></td>
        </tr>
        <%- end -%>
        <%- end -%>
      </table>
      <div class='panel-footer'>
        <%%= link_to edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: 'btn btn-primary margin-right-sm' do %>
          Editar
        <%% end %>
        <%%= link_to <%= index_helper %>_path, class: 'btn btn-default' do %>
          Voltar
        <%% end %>
      </div>
    </div>
  </div>
</div>

